    "eslint-plugin-react": "^7.31.8",
    "husky": "^8.0.0",
    "lerna": "^5.5.1",
    "lint-staged": "^13.0.3",
    "prettier": "2.7.1",
    "stylelint": "^14.11.0",
    "stylelint-config-standard": "^28.0.0"
  }
